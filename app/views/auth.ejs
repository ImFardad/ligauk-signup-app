<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
  <meta charset="UTF-8">
  <title>ثبت‌نام / ورود</title>
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://cdn.jsdelivr.net/npm/vue@2/dist/vue.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
</head>
<body>
  <div id="app">
    <!-- انتخاب مسیر -->
    <div v-if="slide===0" class="slide">
      <h2>سلام! چه کاری می‌خوای انجام بدی؟</h2>
      <button class="primary" @click="selectMode('register')">ثبت‌نام جدید</button>
      <button class="primary" @click="selectMode('login')">ورود</button>
    </div>

    <!-- ترنزیشن با mode="out-in" برای جلوگیری از پرش -->
    <transition name="fade-scale" mode="out-in">
      <!-- مراحل ثبت‌نام -->
      <div v-if="mode==='register' && slide>0 && slide<5" class="slide" :key="slide">
        <h3>مرحله {{slide}} از 4</h3>

        <div v-if="slide===1">
          <label>نام:</label>
          <input v-model="firstName" :class="{ 'error-field': errorField==='firstName' }" placeholder="مثال: فراد">
          <label>نام خانوادگی:</label>
          <input v-model="lastName" :class="{ 'error-field': errorField==='lastName' }" placeholder="مثال: رضایی">
        </div>

        <div v-if="slide===2">
          <label>شماره موبایل:</label>
          <input v-model="phoneNumber" :class="{ 'error-field': errorField==='phoneNumber' }" placeholder="09123456789">
          <label>کد ملی:</label>
          <input v-model="nationalId" :class="{ 'error-field': errorField==='nationalId' }" placeholder="0123456789">
          <label>ایمیل:</label>
          <input v-model="email" :class="{ 'error-field': errorField==='email' }" placeholder="Ligauk.info@gmail.com">
        </div>

        <div v-if="slide===3">
          <p>کد ۶ رقمی ارسال شده:</p>
          <input v-model="code" :class="{ 'error-field': errorField==='code' }" placeholder="———">
        </div>

        <div v-if="slide===4">
          <label>رمز عبور:</label>
          <input v-model="password" type="password" :class="{ 'error-field': errorField==='password' }" placeholder="حداقل ۶ کاراکتر و عدد">
          <label>تکرار رمز:</label>
          <input v-model="password2" type="password" :class="{ 'error-field': errorField==='password2' }" placeholder="دوباره وارد کنید">
        </div>

        <div class="btn-group">
          <!-- دکمه قبلی -->
          <button class="secondary" @click="prev" :disabled="loading">قبلی</button>
          <!-- دکمه بعدی -->
          <button class="primary" @click="next" :disabled="loading">
            {{ slide<4 ? 'بعدی' : 'ثبت‌نام' }}
          </button>
        </div>

        <!-- Spinner هنگام بارگذاری -->
        <div v-if="loading" class="spinner"></div>

        <p class="error">{{ errorMessage }}</p>
      </div>

      <!-- پایان ثبت‌نام -->
      <div v-if="mode==='register' && slide===5" class="slide" key="done">
        <h3>تبریک! ثبت‌نام با موفقیت انجام شد 🎉</h3>
        <button class="primary" @click="goToLogin">ورود</button>
      </div>

      <!-- فرم ورود -->
      <div v-if="mode==='login' && slide===1" class="slide" key="login">
        <h3>ورود به حساب</h3>
        <label>شماره موبایل:</label>
        <input v-model="phoneNumber" :class="{ 'error-field': errorField==='loginPhone' }" placeholder="09123456789">
        <label>رمز عبور:</label>
        <input v-model="password" type="password" :class="{ 'error-field': errorField==='loginPass' }" placeholder="******">
        <div class="btn-group">
          <!-- اکنون فعال است -->
          <button class="secondary" @click="prev" :disabled="loading">قبلی</button>
          <button class="primary" @click="login" :disabled="loading">ورود</button>
        </div>
        <div v-if="loading" class="spinner"></div>
        <p class="error">{{ errorMessage }}</p>
      </div>
    </transition>

    <!-- پروگرس‌بار ثابت -->
    <div class="progress-bar" v-if="mode==='register' && slide>0 && slide<=4">
      <div class="progress" :style="{ width: progress+'%' }"></div>
    </div>
  </div>

  <script src="/js/auth.js"></script>
</body>
</html>
